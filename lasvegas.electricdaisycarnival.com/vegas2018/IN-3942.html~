<!-- scripts -->
<script type="text/javascript">
window.resizePage = function(){
    console.log('watch trailer is open now!');
    setTimeout(function(){window.dispatchEvent(new Event('resize'));}, 1000);
}
window.openWatchTrailer = function(){
    jQuery(".watch-trailer-btn .nectar-button").trigger('click');
}
window.openNewsletter = function(){
    jQuery("#dummy-newsletter-btn").trigger("click");
}
jQuery(".watch-trailer-btn .nectar-button").attr('onclick', 'resizePage();');
jQuery(".home_slider a.watch-trailer").attr('onclick', 'openWatchTrailer();');
jQuery('.btn-newsletter-signup, .home_slider .newsletter-btn').attr('onclick', 'openNewsletter();');
</script>
